<!DOCTYPE html>
<html>
<head>
	<title>Five for Five</title>
</head>
<body style="background-color: #E0E0E0">

	<h1>Ebay Search</h1>



<div class="container-fluid">
	<div class="row">
	<% if @item %>
	<% @item['findItemsByKeywordsResponse'][0]['searchResult'][0]['item'].each do |i| %>
		<div class="col-xs-3">
			<div class="itempic">
				<a href=<%= i['viewItemURL'][0]%>><%= image_tag i['galleryURL'][0]%></a>
			</div>
			<div class="itemtitle">
				<%= i['title'][0] %>
			</div>
			<div class="itemprice">
				<%= number_to_currency(i['sellingStatus'][0]['currentPrice'][0]['__value__'])%>
			</div>
			<div class="timeremaining">
				<%= i['sellingStatus'][0]['timeLeft'][0]%>
			</div>
		</div>
		<% end %>
		<% end %>
	</div>
</div>

<div id="maxprice">
<%= form_tag wclothing_path, :method => 'get' do %>
    <%= text_field_tag :price %>
    <%= submit_tag ("Max Price") %>
<% end %>
</div>

</body>
</html>


